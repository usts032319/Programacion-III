<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/marcaVehiculo"
                android:hint="Marca"
                android:paddingTop="10dp"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/modeloVehiculo"
                android:hint="Modelo"
                android:paddingTop="10dp"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/yearVehiculo"
                android:hint="AÃ±o"
                android:paddingTop="10dp"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/motorVehiculo"
                android:hint="Motor"
                android:paddingTop="10dp"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/chasisVehiculo"
                android:hint="Chasis"
                android:paddingTop="10dp"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="match_parent"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:text="Cancelar"/>

        </LinearLayout>

        <ListView
            android:id="@+id/listaCarro"
            android:layout_below="@id/linearEditar"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        </ListView>

    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblmarca"
        android:text="Marca:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/marca"
        android:text="toyota"
        android:textSize="20sp"
        android:layout_marginTop="13dp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@+id/lblmarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblmodelo"
        android:text="Modelo:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/lblmarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/modelo"
        android:text="12345"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:layout_below="@+id/marca"
        android:layout_toRightOf="@+id/lblmodelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblyear"
        android:text="AÃ±o:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/lblmodelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/year"
        android:text="12345"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:layout_below="@+id/modelo"
        android:layout_toRightOf="@+id/lblyear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblmotor"
        android:text="Numero de motor:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/lblyear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/motor"
        android:text="12345"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:layout_below="@+id/lblyear"
        android:layout_toRightOf="@+id/lblmotor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblchasis"
        android:text="Numero de chasis:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/lblmotor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/chasis"
        android:text="12345"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:layout_below="@+id/lblmotor"
        android:layout_toRightOf="@+id/lblchasis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>